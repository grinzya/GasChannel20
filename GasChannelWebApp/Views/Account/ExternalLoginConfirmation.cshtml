@model  GasChannelWebApp.Models.AccountModels.RegisterExternalLoginModel
@{
    ViewBag.Title = "Регистрация";
}

<h1>@ViewBag.Title</h1>
<h2>Associate your @ViewBag.ProviderDisplayName account</h2>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Association Form</legend>
        <p>
            Вы успешно вошли с помощью <strong>@ViewBag.ProviderDisplayName</strong>.
            Введите имя пользователя для этого сайта и завершите регистрацию.
        </p>
        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="Зарегистрировать" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}